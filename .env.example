# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Settings
VITE_APP_TITLE=Asset Tracker
VITE_APP_DESCRIPTION=Comprehensive asset management for diaspora real estate owners

# API Configuration
VITE_API_URL=https://api.assettracker.com/api
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000
VITE_USE_MOCK_API=false

# Authentication
VITE_AUTH_TOKEN_KEY=asset_tracker_token
VITE_AUTH_REFRESH_TOKEN_KEY=asset_tracker_refresh_token
VITE_JWT_SECRET=your_jwt_secret_here
VITE_TOKEN_EXPIRY=3600

# Database Configuration (for backend reference)
DATABASE_URL=postgresql://user:password@localhost:5432/asset_tracker
REDIS_URL=redis://localhost:6379

# File Storage
VITE_STORAGE_KEY_PREFIX=asset_tracker_
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_API_KEY=your_cloudinary_api_key
VITE_AWS_S3_BUCKET=asset-tracker-uploads
VITE_AWS_REGION=us-east-1
VITE_CDN_URL=https://cdn.assettracker.com

# Email Service
VITE_EMAIL_PROVIDER=sendgrid
VITE_EMAIL_API_KEY=your_sendgrid_api_key
VITE_FROM_EMAIL=noreply@assettracker.com
VITE_FROM_NAME=Asset Tracker
VITE_SUPPORT_EMAIL=support@assettracker.com

# External Calendar Integration
VITE_GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
VITE_MICROSOFT_OUTLOOK_CLIENT_ID=your_microsoft_client_id
VITE_APPLE_CALENDAR_API_KEY=your_apple_api_key

# Real-time Features
VITE_WEBSOCKET_URL=wss://ws.assettracker.com
VITE_ENABLE_WEBSOCKETS=true

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key
VITE_FCM_VAPID_KEY=your_fcm_vapid_key

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_MULTI_TENANT=false
VITE_ENABLE_REAL_TIME=true

# External Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
VITE_INTERCOM_APP_ID=your_intercom_app_id

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_HOTJAR_ID=your_hotjar_id
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Security
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
VITE_CSP_NONCE=your_csp_nonce

# Rate Limiting
VITE_API_RATE_LIMIT=1000
VITE_API_RATE_WINDOW=3600

# Development
VITE_DEV_MODE=true
VITE_DEBUG=false